{
  "capabilities": [
    {
      "ident": "COOKTOP_LOCK",
      "name": "Sperre",
      "type": "boolean",
      "presentation": { "kind": "switch", "captionOn": "Gesperrt", "captionOff": "Frei" },
      "create": { "when": "profileHasAny", "keys": ["childLock", "control.lock", "cooktop.lock", "lock.child"] },
      "action": { "enableWhen": "profileWriteableAny", "writeableKeys": ["childLock.mode", "control.lock.mode", "cooktop.lock.mode", "lock.child.mode"], "reassertOn": ["setup", "status"] },
      "read": { "sources": ["childLock", "control.lock", "cooktop.lock", "lock.child"], "string_true": ["ON", "TRUE", "1"], "string_false": ["OFF", "FALSE", "0"] },
      "write": { "template": { "childLock": "@onoff" } }
    },

    {
      "ident": "LEFT_FRONT_LEVEL",
      "name": "Links vorn Stufe",
      "type": "integer",
      "presentation": { "kind": "slider", "range": { "min": 0, "max": 9, "step": 1, "digits": 0 } },
      "create": { "when": "profileHasAny", "keys": ["heater.0.powerLevel", "elements.0.powerLevel", "burner.0.powerLevel", "zones.0.powerLevel"] },
      "action": { "enableWhen": "profileWriteableAny", "writeableKeys": ["heater.0.powerLevel.mode", "elements.0.powerLevel.mode", "burner.0.powerLevel.mode", "zones.0.powerLevel.mode"], "reassertOn": ["setup", "status"] },
      "read": {
        "array": { "container": "heater", "where": { "locationName": "LEFT_FRONT" }, "path": "powerLevel" },
        "sources": ["heater.0.powerLevel", "elements.0.powerLevel", "burner.0.powerLevel", "zones.0.powerLevel"]
      },
      "write": { "arrayTemplate": { "container": "heater", "where": { "locationName": "LEFT_FRONT" }, "set": { "locationName": "LEFT_FRONT", "powerLevel": "@int" } } }
    },

    {
      "ident": "RIGHT_FRONT_LEVEL",
      "name": "Rechts vorn Stufe",
