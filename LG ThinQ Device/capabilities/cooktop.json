      "read": {
        "array": { "container": "heater", "where": { "locationName": "RIGHT_FRONT" }, "path": "powerLevel" },
        "sources": ["heater.1.powerLevel", "elements.1.powerLevel", "burner.1.powerLevel", "zones.1.powerLevel"]
      },
      "write": { "arrayTemplate": { "container": "heater", "where": { "locationName": "RIGHT_FRONT" }, "set": { "locationName": "RIGHT_FRONT", "powerLevel": "@int" } } }
    },

    {
      "ident": "LEFT_REAR_LEVEL",
      "name": "Links hinten Stufe",
