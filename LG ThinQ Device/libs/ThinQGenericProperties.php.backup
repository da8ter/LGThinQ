    /**
     * Get definition for a specific property
     * 
     * @param string $property Property name
     * @return array<string, mixed>|null
     */
    public static function getDefinition(string $property): ?array
    {
        $all = self::getDefinitions();
        return $all[$property] ?? null;
    }
    
    /**
     * Get English name for a property (for use with Symcon Translate())
     * 
     * @param string $property Property key (e.g., 'remote_control_enabled')
     * @return string|null English name or null if not found
     */
    public static function getEnglishName(string $property): ?string
    {
        $translations = self::getTranslations('en');
        return $translations[$property] ?? null;
    }
    
