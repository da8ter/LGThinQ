{
    "elements": [
        { "type": "Label", "label": "LG ThinQ Cloud Connection (PAT-based)" },
        { "type": "ValidationTextBox", "name": "AccessToken", "caption": "Personal Access Token (PAT)", "width": "600px" },
        { "type": "Label", "label": "Hint: Create a PAT at https://connect-pat.lgthinq.com." },
        { "type": "ValidationTextBox", "enabled": false, "name": "CountryCode", "caption": "Country Code (e.g., DE, US)", "width": "150px" },


