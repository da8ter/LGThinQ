{
    "elements": [
        { "type": "Label", "label": "LG ThinQ Cloud Connection (PAT-based)" },
        { "type": "ValidationTextBox", "name": "AccessToken", "caption": "Personal Access Token (PAT)", "width": "600px" },
        { "type": "Label", "label": "Hint: Create a PAT at https://connect-pat.lgthinq.com." },
        { "type": "ValidationTextBox", "enabled": false, "name": "CountryCode", "caption": "Country Code (e.g., DE, US)", "width": "120px" },


        { "type": "Label", "label": "MQTT Push (Symcon MQTT Client)", "visible": true },
        { "type": "ValidationTextBox", "enabled": false, "name": "ClientID", "caption": "Client ID (CN for certificate)", "width": "400px", "placeholder": "leave empty to auto-generate / inherit" },
        { "type": "CheckBox", "enabled": false, "name": "UseMQTT", "caption": "Use MQTT for events", "visible": true },
        
        { "type": "ValidationTextBox", "enabled": false, "name": "MQTTTopicFilter", "caption": "Topic filter", "width": "600px", "placeholder": "app/clients/*/#" },
        { "type": "CheckBox", "enabled": false, "name": "IgnoreRetained", "caption": "Ignore retained MQTT messages", "visible": true },

        { "type": "Label", "label": "Event API (Auto-Renew)" },
        { "type": "NumberSpinner", "name": "EventTTLHrs", "caption": "Event subscription TTL (hours)", "minimum": 1, "maximum": 24, "suffix": "h" },
        { "type": "NumberSpinner", "name": "EventRenewLeadMin", "caption": "Renew before expiry (minutes)", "minimum": 1, "maximum": 59, "suffix": "min" },

        { "type": "Label", "label": "Diagnostics" },
        { "type": "CheckBox", "name": "Debug", "caption": "Debug logging" }

    ],
    "actions": [
        { "type": "Button", "caption": "MQTT Verbindung einrichten", "onClick": "LGTQ_UISetupMqttConnection($id);" },
        { "type": "Button", "label": "Test connection", "onClick": "LGTQ_TestConnection($id);" },
        { "type": "Button", "label": "Sync devices", "onClick": "LGTQ_SyncDevices($id);" },
        { "type": "Button", "label": "Update now", "onClick": "LGTQ_Update($id);" },
        { "type": "Button", "label": "Subscribe all known devices", "onClick": "LGTQ_SubscribeAll($id);" },
        { "type": "Button", "label": "Unsubscribe all known devices", "onClick": "LGTQ_UnsubscribeAll($id);" },
        { "type": "Button", "label": "Renew all now", "onClick": "LGTQ_RenewAll($id);" }
    ],
    "status": [
        { "code": 101, "icon": "inactive", "caption": "Creating" },
        { "code": 102, "icon": "active", "caption": "Ready" },
        { "code": 104, "icon": "error", "caption": "Please check: PAT" }
    ]
}